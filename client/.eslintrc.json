{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "standard"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "react-hooks"
    ],
    "rules": {
        "react/prop-types": 0,
        "no-unused-vars": 1,
        "react/no-unescaped-entities": 0,
        "react-hooks/exhaustive-deps": 1,
        "react-hooks/rules-of-hooks": 2
    },
    "root": true
}